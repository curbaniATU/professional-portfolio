<%- include('./partials/header') %>

  <div class="flex flex-wrap justify-center items-center bg-[#f5cb5c] p-12 space-x-4">
    <div class="block border-2 border-[#333533] bg-[#333533] rounded-lg p-10 m-6 max-w-2xl w-xl overflow-scroll">
      <h1 class="text-3xl underline font-bold font-mono text-[#e8eddf] mb-2">Contact Me</h1>
      <ul class="text-[#e8eddf] mb-4">
        <li><a href="mailto:curbani@atu.edu" class="text-[#e8eddf] hover:underline">Email Me</a></li>
        <li><a href="tel:501-555-5555" class="text-[#e8eddf] hover:underline">Call Me</a></li>
        <li><a href="https://www.linkedin.com/in/caleb-urbani-030645354" class="text-[#e8eddf] hover:underline">LinkedIn</a></li>
        <li><a href="https://github.com/curbaniATU" class="text-[#e8eddf] hover:underline">GitHub</a></li>
      </ul>
      <form action="/contact-form" method="POST" class="bg-[#333533] text-[#e8eddf] p-8 rounded-lg w-full max-w-xl space-y-6">
      
      <div class="flex flex-col">
        <label for="name" class="text-xl font-semibold mb-2">Name</label>
        <input type="text" id="name" name="name" class="p-4 bg-[#444444] border border-[#333533] rounded-lg text-[#e8eddf]" required>
      </div>

      <div class="flex flex-col">
        <label for="email" class="text-xl font-semibold mb-2">Email</label>
        <input type="email" id="email" name="email" class="p-4 bg-[#444444] border border-[#333533] rounded-lg text-[#e8eddf]" required>
      </div>

      <div class="flex flex-col">
        <label for="message" class="text-xl font-semibold mb-2">Message</label>
        <textarea id="message" name="message" class="p-4 bg-[#444444] border border-[#333533] rounded-lg text-[#e8eddf]" rows="6" required></textarea>
      </div>

      <div class="flex justify-center">
        <button type="submit" class="bg-[#f5cb5c] text-[#333533] py-2 px-6 rounded-lg text-xl font-semibold hover:bg-[#e8eddf] transition-all duration-300">
          Send Message
        </button>
      </div>
    </form>
    </div>
  </div>

<%- include('./partials/footer') %> 