<%- include('partials/header') %>
  <div class="flex flex-row justify-center items-center bg-[#f5cb5c] p-12 space-x-4">
    <div class="block border-2 border-[#333533] bg-[#333533] rounded-lg p-6 m-6 max-w-4xl w-auto">
      <img src=<%= image %> alt="Profile Picture" class="border-4 border-[#333533] rounded-full object-cover w-50 h-50 ml-auto mr-auto">
      <h2 class="text-2xl underline font-bold font-mono text-[#e8eddf]"><%= name %></h2>
      <p class="text-xl text-[#e8eddf] p-2 mt-4"><%= summary %></p> <br>
    </div>
    <div class="block border-2 border-[#333533] bg-[#333533] rounded-lg p-6 m-6 max-w-4xl w-auto">
      <h2 class="text-2xl underline font-bold font-mono text-[#e8eddf]">Social Links</h2>
      <div class="flex flex-col justify-center items-center space-y-6 mt-4">
        <a href=<%= github %>><img src="images/github-mark-white.png" alt="GitHub logo" class="w-40 h-40 transform transition-transform duration-200 hover:scale-110"></a>
        <a href=<%= linkedIn %>><img src ="images/InBug-White.png" alt="LinkedIn logo" class="w-40 h-40 transform transition-transform duration-200 hover:scale-110"></a>
      </div>
    </div>
  </div>

  
<%- include('partials/footer') %>